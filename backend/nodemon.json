{
  "watch": [
    "src"
  ],
  "ext": "ts",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "dist"
  ],
  "exec": "powershell -ExecutionPolicy Bypass -File scripts/start-dev.ps1",
  "signal": "SIGTERM",
  "verbose": false,
  "restartable": "rs",
  "delay": 500,
  "killTimeout": 3000
}